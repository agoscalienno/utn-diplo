<div class="container" style="margin-top:100px;">



    <form action="/admin/login" method="post">
        <div class="row mb-3">
            <label for="inputUser" class="col-sm-2 col-form-label">Usuario</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputUser" name="usuario">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword" name="password">
            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="background-color: #75a476ff ; border-color: #75a476ff; ">Sign in</button>
    </form>
{{#if error}}
<p>Usuario y/o password incorrectos</p>
{{/if}}
</div>